<p id="notice"><%= notice %></p>

<h1>Listing Firms</h1>

<%= Time.zone.now %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tel</th>
      <th>Time zone</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @firms.each do |firm| %>
      <tr>
        <td><%= firm.name %></td>
        <td><%= firm.tel %></td>
        <td><%= whattime firm.time_zone %></td>
        <td><%= firm.user_id %></td>
        <td><%= link_to 'Show', firm %></td>
        <td><%= link_to 'Edit', edit_firm_path(firm) %></td>
        <td><%= link_to 'Destroy', firm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Firm', new_firm_path %>
